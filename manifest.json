{
    "name": "My Extension",
    "version": "2.1",
    "manifest_version": 2,
    "description": "Gets information from Google.",
    "background": {
        "persistent": false,
        "scripts": [
            "background_script.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_idle",
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "permissions": [
        "<all_urls>",
        "activeTab"
    ]
}